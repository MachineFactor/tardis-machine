{
  "name": "tardis-machine",
  "version": "3.4.1",
  "engines": {
    "node": ">=12"
  },
  "description": "Locally runnable server with built-in data caching, providing both tick-level historical and consolidated real-time cryptocurrency market data via HTTP and WebSocket APIs",
  "main": "dist/index.js",
  "source": "src/index.js",
  "types": "dist/index.d.ts",
  "repository": "tardis-dev/tardis-machine",
  "homepage": "https://github.com/tardis-dev/tardis-machine",
  "scripts": {
    "build": "tsc",
    "precommit": "lint-staged",
    "test": "jest --runInBand --forceExit",
    "benchmark": "node ./benchmark.js",
    "prepare": "npm run build",
    "release": "cross-var \"npm run build && npm run test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish --access=public\""
  },
  "bin": {
    "tardis-machine": "./bin/tardis-machine.js"
  },
  "files": [
    "src",
    "dist",
    "bin",
    "benchmark.js"
  ],
  "keywords": [
    "cryptocurrency data feed",
    "market data",
    "api client",
    "crypto markets data replay",
    "historical data",
    "real-time cryptocurrency market data feed",
    "historical cryptocurrency prices",
    "cryptocurrency api",
    "real-time normalized WebSocket cryptocurrency markets data",
    "normalized cryptocurrency market data API",
    "order book reconstruction",
    "market data normalization",
    "cryptocurrency api",
    "cryptocurrency",
    "orderbook",
    "exchange",
    "websocket",
    "realtime",
    "bitmex",
    "binance",
    "trading",
    "high granularity order book data",
    "replay service",
    "historical cryptocurrency market data replay API"
  ],
  "license": "MPL-2.0",
  "dependencies": {
    "debug": "^4.3.2",
    "find-my-way": "^4.3.3",
    "is-docker": "^2.2.1",
    "tardis-dev": "^12.6.7",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v19.5.0",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@clusterws/cws": "^3.0.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "@types/node-fetch": "^3.0.2",
    "@types/split2": "^3.2.1",
    "@types/yargs": "^17.0.3",
    "cross-var": "^1.1.0",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "lint-staged": "^11.1.2",
    "node-fetch": "^2.6.1",
    "prettier": "^2.4.1",
    "split2": "^3.2.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)?$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
